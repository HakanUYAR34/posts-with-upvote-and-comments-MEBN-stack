<h1>Posts</h1>
<div class="posts mt-3">
	{{#each posts}}
		<div class="post card mb-4 mb-lg-2">
			<div class="card-body">
				<div class="row">
					<div class="col-2" style="min-width: 120px;">
						{{> post-vote-box post=this isLoggedIn=../isLoggedIn}}
					</div>
					<div class="col">
						<h3>
							<a href="/post/{{guid}}" class="text-dark">
								{{title}}
							</a>
						</h3>
						<p>{{truncate description 100 '...'}}</p>
						<p class="text-muted">
							<span data-toggle="tooltip" data-placement="right" title="{{moment created_at 'lll'}}">
								<i class="far fa-clock"></i>
								{{momento created_at fromNow=false}}
								&nbsp;
							</span>
						</p>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
</div>

