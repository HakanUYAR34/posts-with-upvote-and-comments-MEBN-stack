<div class="card text-center">
	<div class="card-body p-4 pl-1 pr-1">
		<h2 class="card-title mb-0">{{post.votes}}</h2>
	</div>
	<div class="card-footer bg-transparent p-0">
		<a
			class="btn btn-outline-secondary btn-block text-muted"
			href="javascript:;"
			onClick="votePost('{{post.guid}}', {{#if isLoggedIn}}1{{else}}0{{/if}})"
		>
			{{#if (toInt post.isVoted)}}
				<i class="fa fa-caret-down"></i>
				Voted
			{{else}}
				<i class="fa fa-caret-up"></i>
				Vote
			{{/if}}
		</a>
	</div>
</div>